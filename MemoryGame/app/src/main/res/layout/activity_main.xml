<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.justplaingoatappsgmail.pianoapp.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blue"
        android:src="@drawable/note_blue"
        android:background="@null"
        android:layout_above="@+id/green"
        android:layout_alignLeft="@+id/green"
        android:layout_alignStart="@+id/green" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/brown"
        android:src="@drawable/note_brown"
        android:layout_above="@+id/gray"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@null" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gray"
        android:src="@drawable/note_gray"
        android:background="@null"
        android:layout_above="@+id/pink"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/black"
        android:src="@drawable/note_black"
        android:background="@null"
        android:layout_above="@+id/gray"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/green"
        android:src="@drawable/note_green"
        android:layout_alignTop="@+id/gray"
        android:layout_alignLeft="@+id/purple"
        android:layout_alignStart="@+id/purple"
        android:background="@null" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orange"
        android:layout_alignTop="@+id/green"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/note_orange"
        android:background="@null" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pink"
        android:src="@drawable/note_pink"
        android:background="@null"
        android:layout_above="@+id/red"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/purple"
        android:src="@drawable/note_purple"
        android:layout_alignTop="@+id/pink"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:nestedScrollingEnabled="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yellow"
        android:layout_alignTop="@+id/purple"
        android:layout_alignRight="@+id/orange"
        android:layout_alignEnd="@+id/orange"
        android:src="@drawable/note_yellow"
        android:background="@null" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/red"
        android:src="@drawable/note_red"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@null" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lime"
        android:layout_alignBottom="@+id/red"
        android:layout_centerHorizontal="true"
        android:src="@drawable/note_lime"
        android:background="@null" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aqua"
        android:layout_alignBottom="@+id/red"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/note_aqua"
        android:background="@null" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/playButton"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/blue"
        android:layout_alignEnd="@+id/blue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMPUTER TURN"
        android:id="@+id/gameStatus"
        android:layout_marginTop="44dp"
        android:textSize="30dp"
        android:layout_below="@+id/playButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
